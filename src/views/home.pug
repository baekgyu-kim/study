extends base.pug

block content
    if loggedIn
        if loggedInUser.userType === "보호자"
            if infoErrorMessage
                h3=infoErrorMessage
                div
                    a(href="owner/dog") 강아지 등록하러 가기
            else
                div
                    a(href="owner/dog") 나의 강아지 관리
                div
                    a(href="owner/match") 선생님 만나러 가기
        else
            if infoErrorMessage
                h3=infoErrorMessage
                div
                    a(href="walker/info") 선생님 정보 등록하러 가기
            else 
                div
                    a(href="walker/info") 선생님 정보 수정
                div
                    a(href="walker/match") 보호자님 만나러 가기

    else
        h1 Welcome to Dog Walk
        H3 Dog Walk에 가입해서 서비스를 이용해보세요!
        div
            a(href="/signup") 회원가입 하러 가기 &rarr;
    img(src= "home_background.png")


        